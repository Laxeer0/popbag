{
  "name": "popbag-minimal",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "copy:swiper": "node ./scripts/copy-swiper.js",
    "dev": "npm run copy:swiper && tailwindcss -i ./src/css/app.css -o ./dist/app.css --watch",
    "build": "tailwindcss -i ./src/css/app.css -o ./dist/app.css --minify && npm run copy:swiper"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "swiper": "^11.2.10",
    "tailwindcss": "^3.4.13"
  }
}



